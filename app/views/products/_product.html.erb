<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
 
  <div>
    <% if product.quantity == 0 %>
      <div>
        <button type="button" class="btn btn-danger" style="background-color: red">Sold Out</button>
      </div> 
      <div>
        <button type="button" class='btn ' disabled><%= fa_icon "shopping-cart", text: 'Add' %></button>
      </div>
      <%else%>
      <div>
        <%= button_to add_item_cart_path(product_id: product.id), class: 'btn',
        method: :post do %>
          <%= fa_icon "shopping-cart", text: 'Add' %> 
      </div>
      <% end %>
    <%end%>
  </div>
    
</article>
